block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "Written by " }
    mixin author(page.metadata.author)
    | #{" on " + moment.utc(page.metadata.date).format('MMMM Do YYYY')}


block content
  article.article
    section.content!= typogr(page.html).typogrify()

